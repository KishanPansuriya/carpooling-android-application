<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cybertoper.journeys.activity.SearchRideFragment">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.cybertoper.journeys.activity.CustomAutoCompleteTextView
                android:id="@+id/atv_places1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter Starting Place" />

            <com.cybertoper.journeys.activity.CustomAutoCompleteTextView
                android:id="@+id/atv_places2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enter Ending Place" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_ride_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:text="Journey Date" />

                <Button
                    android:id="@+id/search_ride_pick_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set" />
            </LinearLayout>

            <Button
                android:id="@+id/search_ride_search_button"
                style="@style/my_buttons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Search Rides"
                android:textStyle="bold" />


            <ListView
                android:id="@+id/search_result"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/search_final_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="You selected: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/search_ride_apply_button"
                style="@style/my_buttons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Select Ride"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>